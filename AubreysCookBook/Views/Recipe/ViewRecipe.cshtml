@model Recipe

<h3>@Model.Name Information</h3>

<table class="table">
    <tr>
        <th>Recipe ID</th>
        <th>Name</th>
        <th>Recipe Description</th>
        <th>Category ID</th>
        <th>Ingredients</th>
    </tr>
    <tr>
        <td>@Model.RecipeID</td>
        <td>@Model.Name</td>
        <td>@Model.RecipeDescription</td>
        <td>@Model.CategoryID</td>
        <td>@Model.Ingredients</td>
    </tr>
</table>

<div style="display: block; margin-bottom: 20px;">
    <a href="/Recipe/UpdateRecipe/@Model.RecipeID"><input type="button" value="Update this Recipe"/></a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteRecipe", "Recipe", "Post"))
    {
        <input type="hidden" asp-for="RecipeID" value="@Model.RecipeID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this Recipe" />
    }
</div>